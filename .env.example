# Database
DATABASE_PATH=database.db

# Logging
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# Email (Resend.com)
RESEND_API_KEY=seu_api_key_aqui
RESEND_FROM_EMAIL=contato@seuprojeto.cachoeiro.es
RESEND_FROM_NAME=SeuProjeto

# App
# Nome da aplicação que aparecerá no título, navbar, footer e logs
APP_NAME=SeuProjeto
BASE_URL=http://localhost:8400
SECRET_KEY=sua_chave_secreta_aqui_mude_em_producao

# Fotos de Perfil
# Tamanho máximo em pixels para fotos de perfil (largura e altura)
# Imagens maiores serão redimensionadas mantendo o aspect ratio
FOTO_PERFIL_TAMANHO_MAX=256

# Server
HOST=0.0.0.0
PORT=8400

# Running Mode (Development ou Production)
# Development: mostra detalhes técnicos dos erros
# Production: mostra apenas mensagens amigáveis e gera logs
RUNNING_MODE=Production

